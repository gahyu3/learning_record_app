  <div class='container d-flex justify-content-center align-items-center'>

    <div class='form-field'>
    <h2 class='title text-center mt-5 mb-5'>新規登録</h2>
      <%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>

        <div class="field mt-3 mb-5">
          <%= f.label :name %><br />
          <%= f.text_field :name, class: 'form-control border-0 border-bottom border-dark' %>
          <div class="error-message">
            <%= resource.errors.full_messages_for(:name).join(', ') %>
          </div>  
        </div>

        <div class="field mb-5">
          <%= f.label :email %><br />
          <%= f.text_field :email, class: 'form-control border-0 border-bottom border-dark' %>
          <div class="error-message">
            <%= resource.errors.full_messages_for(:email).join(', ') %>
          </div>  
        </div>

        <div class="field mb-5">
          <%= f.label :password %><br />
          <%= f.password_field :password, class: 'form-control border-0 border-bottom border-dark' %>
          <div class="error-message">
            <%= resource.errors.full_messages_for(:password).join(', ') %>
          </div>  
        </div>

        <div class="action d-flex justify-content-center align-items-center">
          <%= f.submit "登録する", class: 'button-blue btn btn-secondary'%>
        </div>
      <% end %>
    </div>
  </div>
