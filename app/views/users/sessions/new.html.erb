
  <div class='container d-flex justify-content-center align-items-center'>
    <div class='form-field'>
    <h2 class='title text-center mt-5 mb-5'>ログイン</h2>
      <%= form_with model: resource, url: session_path(resource_name), local: true do |f| %>

        <p class='notice'><%= notice %></p>
        <p class='alert text-danger'><%= alert %></p>

        <div class='field mb-5'>
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control border-0 border-bottom border-dark' %>
        </div>

        <div class='field mb-5'>
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control border-0 border-bottom border-dark' %>
        </div>

        <div class='action d-flex justify-content-center mb-5'>
          <%= f.submit 'ログインする', class: 'button-blue btn btn-secondary'%>
        </div>

        <div class='action d-flex justify-content-center'>
          <%= link_to '新規登録する', new_user_registration_path, class: 'button-blue btn btn-secondary', style: 'padding: 12px;' %>
        </div>

      <% end %>
    </div>
  </div>

